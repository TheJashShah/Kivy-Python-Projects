<TextInput>:
    font_size: 25

<Calculator>:

    btn_0: btn_0
    btn_1: btn_1
    btn_2: btn_2
    btn_3: btn_3
    btn_4: btn_4
    btn_5: btn_5
    btn_6: btn_6
    btn_7: btn_8
    btn_9: btn_9
    btn_add: btn_add
    btn_subtract: btn_subtract
    btn_multiply: btn_multiply
    btn_divide: btn_divide
    btn_equal: btn_equal
    btn_decimal: btn_decimal
    btn_del: btn_del
    text_: text_

    cols: 1

    TextInput:
        id: text_
        multiline: False
        disabled: True

    GridLayout:
        cols: 1

        GridLayout:
            cols: 4

            Button:
                id: btn_7
                text: "7"
                on_release:
                    root.clicked(btn_7)

            Button:
                id: btn_8
                text: "8"
                on_release:
                    root.clicked(btn_8)

            Button:
                id: btn_9
                text: "9"
                on_release:
                    root.clicked(btn_9)

            Button:
                id: btn_add
                text: "+"
                on_release:
                    root.clicked_action_btn(btn_add)

            Button:
                id: btn_4
                text: "4"
                on_release:
                    root.clicked(btn_4)

            Button:
                id: btn_5
                text: "5"
                on_release:
                    root.clicked(btn_5)

            Button:
                id: btn_6
                text: "6"
                on_release:
                    root.clicked(btn_6)

            Button:
                id: btn_subtract
                text: "-"
                on_release:
                    root.clicked_action_btn(btn_subtract)

            Button:
                id: btn_1
                text: "1"
                on_release:
                    root.clicked(btn_1)

            Button:
                id: btn_2
                text: "2"
                on_release:
                    root.clicked(btn_2)

            Button:
                id: btn_3
                text: "3"
                on_release:
                    root.clicked(btn_3)

            Button:
                id: btn_multiply
                text: "*"
                on_release:
                    root.clicked_action_btn(btn_multiply)

        GridLayout:
            cols: 4

            Button:
                id: btn_decimal
                text: "."
                on_release:
                    root.decimal()

            Button:
                id: btn_0
                text: "0"
                on_release:
                    root.clicked(btn_0)

            Button:
                id: btn_divide
                text: "/"
                on_release:
                    root.clicked_action_btn(btn_divide)

            Button:
                id: btn_del
                text: "del"
                on_release:
                    root.delete()


        GridLayout:
            cols: 1

            Button:
                id: btn_equal
                text: "="
                on_release:
                    root.equal_pressed()

<P>:
    GridLayout:
        cols: 1
        Label:    
            text: "Please enter the values properly."

        Button:
            text: "Close"
            on_release:
                root.dismiss()




